@using Mango.Mango.web.Models
@model CouponDTO

<form asp-action="DeleteCoupon" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Coupon</h1>
        <input asp-for="CouponId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="couponCode" />
                <span class="text-danger" asp-validation-for="couponCode"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="discountMount" />
                <span class="text-danger" asp-validation-for="discountMount"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Minimun Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="minAmount" />
                <span class="text-danger" asp-validation-for="minAmount"></span>
            </div>

            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control " asp-action="CouponIndex">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>
